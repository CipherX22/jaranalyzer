<hibernate-configuration>
    <session-factory>
        <!-- Proprietà di connessione al database -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Plugins</property>
        <property name="hibernate.connection.username">francesco</property>
        <property name="hibernate.connection.password">password</property>

        <!-- Altre configurazioni di Hibernate -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">true</property>

        <!-- Mapping delle classi di entità -->
        <mapping class="com.example.User" />
    </session-factory>
</hibernate-configuration>
